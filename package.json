{
  "name": "house-proud-backend",
  "version": "1.0.0",
  "description": "House Proud Backend API",
  "license": "ISC",
  "author": "Ben Walker",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src/**/*.ts --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "deploy": "firebase deploy --only hosting"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "node-ts": "^8.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "firebase-admin": "^12.0.0"
  }
}
